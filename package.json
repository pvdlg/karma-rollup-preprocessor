{
  "name": "@metahub/karma-rollup-preprocessor",
  "description": "Karma preprocessor to bundle modules using Rollup with sourcemap and watch support",
  "version": "0.0.0-development",
  "author": "Pierre Vanduynslager (https://github.com/pvdlg)",
  "ava": {
    "babel": {
      "testOptions": {
        "babelrc": false
      }
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "6"
          }
        }
      ]
    ]
  },
  "bugs": {
    "url": "https://github.com/pvdlg/karma-rollup-preprocessor/issues"
  },
  "dependencies": {
    "chokidar": "^2.0.0",
    "lodash": "^4.17.4",
    "minimatch": "^3.0.4",
    "nodeify": "^1.0.1"
  },
  "devDependencies": {
    "ava": "^1.0.1",
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "codecov": "^3.0.0",
    "conventional-changelog-metahub": "^2.0.1",
    "fs-extra": "^7.0.0",
    "jasmine-core": "^3.0.0",
    "karma": "^3.0.0",
    "karma-jasmine": "^2.0.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "nyc": "^13.1.0",
    "p-event": "^2.0.0",
    "pify": "^4.0.0",
    "proxyquire": "^2.0.0",
    "rimraf": "^2.6.1",
    "rollup": "^1.0.0",
    "rollup-plugin-babel": "^4.0.1",
    "semantic-release": "^15.7.1",
    "sinon": "^7.1.1",
    "temp-dir": "^1.0.0",
    "tempy": "^0.2.0",
    "xo": "^0.24.0"
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "lib"
  ],
  "homepage": "https://github.com/pvdlg/karma-rollup-preprocessor#readme",
  "keywords": [
    "karma",
    "karma-plugin",
    "karma-preprocessor",
    "modules",
    "rollup",
    "sourcemaps",
    "watcher"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "nyc": {
    "include": [
      "lib/**/*.js"
    ],
    "reporter": [
      "json",
      "text",
      "html"
    ],
    "all": true
  },
  "peerDependencies": {
    "karma": ">=0.13.2",
    "rollup": ">=0.48"
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "es5"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "analyzeCommits": {
      "preset": "metahub",
      "releaseRules": "conventional-changelog-metahub/release-rules"
    },
    "generateNotes": {
      "preset": "metahub"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pvdlg/karma-rollup-preprocessor.git"
  },
  "scripts": {
    "codecov": "codecov -f coverage/coverage-final.json",
    "compile": "rimraf lib && babel src --source-maps --out-dir lib",
    "lint": "xo",
    "prepublishOnly": "npm run compile",
    "pretest": "npm run compile && npm run lint",
    "semantic-release": "semantic-release",
    "test": "nyc ava -v"
  },
  "xo": {
    "prettier": true
  }
}
